@import url('https://fonts.googleapis.com/css2?family=Dosis:wght@200..800&family=Quicksand:wght@300..700&display=swap')
@import url('https://fonts.googleapis.com/css2?family=Vibur&display=swap')
@import '~line-awesome/dist/line-awesome/css/line-awesome.css'
@import '~nib'
normalize-css()

$primary-color = #FFC107

*
    box-sizing border-box

@import 'classes'
@import 'forms'

html
    height 100%

body
    font-family: 'Quicksand', sans-serif
    height 100%
    color: #424242

a
    text-decoration none
    color: $primary-color
    font-weight: bold

#app
    height 100%

header
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 80px 
    display: flex
    align-items: center
    justify-content: center
    z-index: 100
    background: white

    nav
        left: 10px
        width 100%
        // font-family: 'Vibur', cursive
        color: black
        font-size: 24px
        margin: 0
        div.column:nth-child(1)
            display: flex
            flex-basis: 50%
            input
                margin: 0
        div.flex
            justify-content: space-between
            // justify-content: flex-start

        h1.logo
            font-family: 'Vibur', cursive
            margin-right: 50px

            a
                color: black

        button
            flex-basis: 180px
            

        form
            flex-basis: 350px
            div.search-box
                position relative
                i
                  position: absolute
                  top: 50%
                  left: 0
                  transform: translate(20%, -60%)
                input
                    padding-left: 40px

    &.only-logo
        background: transparent

        nav
            h1
                a
                    left: 10px
                    color: white



    ul.user-actions
        margin: 0
        padding: 0
        
        li
          display: inline-block
          list-style none
          a
            font-size: 32px
            color: black
            margin-left: 10px

h1
    font-family: 'Dosis', sans-serif
    font-weight: normal
    font-size: 36px